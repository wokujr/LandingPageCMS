<div class="container">
  <h1 class="text-center mt-4"> Edit News </h1>

  <% if @content.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
      <% @content.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>


  <%= form_with(model: @content, local: true)  do |form| %>
    <div>
      <%= form.label :title, class: "form-label" %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :body, class: "form-label" %> <br>
      <%= form.text_area :body, class: "form-control mb-3" %>
    </div>

    <%= form.submit "Edit Post", class: "btn btn-primary" %>

  <% end %>

</div>