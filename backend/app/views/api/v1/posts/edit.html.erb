<div class="container">
  <h1>Editing post</h1>

  <%= form_with(model: @post, url: api_v1_post_path) do |form| %>

    <% if @post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.submit %>
    </div>

    <div>
      <%= link_to "Show this post", api_v1_post_path(@post) %> |
      <%= link_to "Back to posts", api_v1_posts_path %>
    </div>

  <% end %>

</div>