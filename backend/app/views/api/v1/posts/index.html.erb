<div id="posts" class="container">

  <p style="color: green"><%= notice %></p>
  <h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="card mt-4">
      <%= render post %>
      <%= link_to "Show This Post", api_v1_post_url(post) %>
    </div>
  <% end %>
  <br>
  <br>
  <%= link_to "New post", new_api_v1_post_path %>
</div>